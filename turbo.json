{
  "$schema": "https://turbo.build/schema.json",
  "ui": "tui",
  "globalEnv": [".env", "NEXT_PUBLIC_*", "EXPO_PUBLIC_*"],
  "tasks": {
    "build": {
      "inputs": ["$TURBO_DEFAULT$", ".env*"],
      "outputs": ["dist/**", ".next/**", "!.next/cache/**"],
      "dependsOn": ["^build"]
    },
    "dev": {
      "cache": false,
      "persistent": true
    },
    "lint": {
      "dependsOn": ["^lint"]
    },
    "check-types": {
      "dependsOn": ["^check-types"]
    },
    "clean": {
      "cache": false
    },
    "test": {
      "dependsOn": ["^test"]
    }
  }
}
